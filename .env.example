# Frontend Environment Configuration Example
# Copy this file to .env and configure your settings

# Backend API configuration
# Primary API endpoint - set to your main backend port
VITE_API_BASE_URL=http://localhost:8001
VITE_WS_BASE_URL=ws://localhost:8001

# Alternative API endpoints for different services
# Port 8000 - Main backend service
VITE_API_BASE_URL_8000=http://localhost:8000
VITE_WS_BASE_URL_8000=ws://localhost:8000

# Port 8001 - Secondary backend service
VITE_API_BASE_URL_8001=http://localhost:8001
VITE_WS_BASE_URL_8001=ws://localhost:8001

# Port 8002 - Third backend service
VITE_API_BASE_URL_8002=http://localhost:8002
VITE_WS_BASE_URL_8002=ws://localhost:8002

# Port 8003 - Fourth backend service
VITE_API_BASE_URL_8003=http://localhost:8003
VITE_WS_BASE_URL_8003=ws://localhost:8003

# Port 8004 - Fifth backend service
VITE_API_BASE_URL_8004=http://localhost:8004
VITE_WS_BASE_URL_8004=ws://localhost:8004

# Features
VITE_ENABLE_AUTO_SAVE=true
VITE_AUTO_SAVE_INTERVAL=5000
VITE_ENABLE_CONTENT_REGENERATION=true

# Development Environment
NODE_ENV=development

# CORS Configuration
VITE_CORS_ENABLED=true

# Port Configuration
# Available backend ports: 8000, 8001, 8002, 8003
# Change VITE_API_BASE_URL and VITE_WS_BASE_URL to switch between ports